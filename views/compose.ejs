<%-include("partials/header")-%>
<h1 class="col-lg-8 col-lg-offset-2 mx-auto"><%=compose%></h1>
<form action="/compose" method="post" class="col-lg-8 col-lg-offset-2 mx-auto">
  <label for="postTitle">Title</label>
  <br />
  <input
    class="form-control w-100"
    type="text"
    name="postTitle"
    id="postTitle"
  />
  <br />
  <label for="postContent">Post</label> <br />
  <textarea
    class="form-control w-100"
    name="postContent"
    id="postContent"
    cols="50"
    rows="5"
  ></textarea>
  <br />
  <button type="submit" class="btn btn-primary">Publish</button>
</form>
<%-include("partials/footer")-%>
